<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#E7E641" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32"
        android:background="#1EBCD4"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            android:weightSum="20" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="30dip"
                android:layout_weight="13"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_callerror_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
              		android:textColor="#FFF"
                    android:textSize="30sp" />
                
                 
                 
                    
           
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="24dip"
        android:layout_marginTop="-70dip"
        
        android:layout_weight="20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="20" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgcallerpic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:onClick="callImageActivity"
                android:src="@drawable/ic_contact_picture_180_holo_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
          	android:layout_weight="13"
            android:gravity="top"
            android:orientation="vertical" >

         

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgFlag"
                    android:layout_width="20dp"
                    android:layout_height="20dip"
                    android:layout_marginRight="5dip"
                    android:visibility="gone"
                    android:background="@drawable/abkhaziacopy" />
                
                <TextView
                    android:id="@+id/tv_callerror_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:layout_marginLeft="10dip"
                    android:text="78897897"
                    android:textColor="#FFF"
                    android:textSize="16sp" />
				

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="24dip"
     	 android:layout_marginTop="7dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
         android:layout_weight="5">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="is not available, please choose an option"
            android:textColor="@color/black"
            android:textSize="14sp" />
        
     </LinearLayout>
    
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="24dip"
        android:layout_weight="20"
        android:layout_marginTop="7dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="30" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:clickable="true"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btn_freecall"
                android:layout_width="65dip"
                android:layout_height="65dip"
                android:onClick="callCheck"
                android:layout_marginTop="0dip"
                android:background="@drawable/r4wprofilescallelector" />
        </LinearLayout>
        
          
          

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:clickable="true"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btn_outcall"
                android:layout_width="65dip"
                android:layout_height="65dip"
                android:layout_gravity=""
                android:onClick="OnclickAction"
                android:layout_marginTop="0dip"
                android:background="@drawable/outcallbtn" />
        </LinearLayout>
        
        

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:clickable="true"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btn_freemsg"
                android:layout_width="65dip"
                android:layout_height="65dip"
                android:onClick="OnclickAction"
                android:background="@drawable/r4wfrdprofilechat" />
        </LinearLayout>

       
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dip"
        android:background="#d6d6d6" />
    <LinearLayout
        android:id="@+id/linerGSMCall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@drawable/listselector"
        android:clickable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/phNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="919717202221"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile (GSM  Call)"
                    android:textColor="#4C463F"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="right|center_vertical"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/call" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="callGSM"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dip"
                    android:gravity="center_vertical"
                    android:text="3.5c"
                    android:visibility="gone"
                    android:textColor="#1EBCD4"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="#189AD1"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6" />

</LinearLayout>
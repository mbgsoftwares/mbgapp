<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verificationbg"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="15"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="15"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtEnter4digitcode"
            style="@style/TextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dip"
            android:text="Enter the 4 digit code"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtthatReceivedCode"
            style="@style/TextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="that you received"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/enterfourdigit"
            android:layout_width="120dip"
            android:layout_height="30dip"
          android:textColor="@color/txtgray"
            android:background="@drawable/codebg"
             android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="4" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="vertical" >
    </LinearLayout>
    
    
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:orientation="vertical" >

        <Button
            android:id="@+id/submitfour"
            android:layout_width="80dip"
            android:layout_height="26dip"
            android:onClick="sendmatchdetails"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/receivedgo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="vertical" >
    </LinearLayout>
    
    

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="90" >

    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:orientation="vertical" >
    
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
         	android:gravity="center_horizontal"
         	android:background="@drawable/entersim"
            android:orientation="vertical" >
        </LinearLayout>
        
        
     <TextView
            android:id="@+id/tvhomeNetworkWrng"
            style="@style/TextVBebasFontGrayBold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
         	android:background="@color/white"
            android:text="Please Ensure You Have Your Home Network Sim in Your Phone Before Pressing Activate" 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:id="@+id/layoutBtnActivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
          	android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dip"
                android:background="@color/blueDark"
                android:gravity="center_horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/imgActivate"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/paperplane" />
            </LinearLayout>

            <Button
                android:id="@+id/btRegisterPin"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:background="@color/BlueLight"
                android:text="@string/activatebutt"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
	</LinearLayout>
        
   </LinearLayout>
    
    

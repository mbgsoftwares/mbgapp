<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_horizontal"
    android:background="#fff" >
    
    <LinearLayout 
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/lv_setting_showUserImage"
        android:background="@drawable/ic_contact_picture_180_holo_light"
        android:gravity="right"
        >
        
        <View 
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:background="#fff"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dp"
            />
        
        <LinearLayout
            android:id="@+id/lv_setting_editUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
             >
        
        <View 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_edit"
            />
        
        </LinearLayout>
    </LinearLayout>

     <LinearLayout 
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:weightSum="10"
        >
        
         <TextView 
             android:id="@+id/tv_setting_showUserName"
             android:text="Username"
             android:textColor="#000"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="10"
             android:layout_gravity="bottom"
             android:gravity="center_horizontal"
             android:layout_marginBottom="10dp"
             />
         
        <View 
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:background="#000"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dp"
            />
        
        <LinearLayout
            android:id="@+id/lv_setting_editUserName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
             >
        
        <View 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_edit"
            />
        
        </LinearLayout>
    </LinearLayout>
    
    
    
    
</LinearLayout>

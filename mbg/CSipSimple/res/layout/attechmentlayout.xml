<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/darkgrey"
    android:orientation="vertical" >
    
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="4dp"
    android:orientation="horizontal" > 

 <LinearLayout
    android:id="@+id/linLayGallery"
    android:layout_width="70dip"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        
    <ImageView
        android:id="@+id/wizard_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="8dip"
     	android:scaleType="fitXY"
        android:src="@drawable/camera" />
    
    <TextView
       	android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="normal"
        android:singleLine="true"
    	android:gravity="center_horizontal"   	
    	android:textSize="15sp"
    	android:textColor="@color/white"
        android:text="Camera" />
    </LinearLayout>
    
 
  <LinearLayout
   	android:id="@+id/linLayPhoto"  
    android:layout_width="70dip"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
       <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="8dip"
     	android:scaleType="fitXY"
        android:src="@drawable/gallery" />
       
       <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="normal"
    	android:singleLine="true"
    	android:gravity="center_horizontal"   	
    	android:textSize="15sp"
    	android:textColor="@color/white"
        android:text="Photo" />
    
    </LinearLayout>
     
  <LinearLayout
    android:id="@+id/linLayVideo"  
    android:layout_width="70dip"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
       <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="8dip"
     	android:scaleType="fitXY"
        android:src="@drawable/video_camera_icon" />
       
       <TextView
        android:id="@+id/itemName2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="normal"
        
    	android:singleLine="true"
    	android:gravity="center_horizontal"   	
    	android:textSize="15sp"
    	android:textColor="@color/white"
        android:text="Video" />
    
    </LinearLayout>
  </LinearLayout>  
  
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" > 
 <LinearLayout
    android:id="@+id/linLayAudio"  
    android:layout_width="70dip"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
        
    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="8dip"
     	android:scaleType="fitXY"
        android:src="@drawable/microphone_icon" />
    
    <TextView
        android:id="@+id/itemName8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="normal"       
    	android:singleLine="true"
    	android:gravity="center_horizontal"   	
    	android:textSize="15sp"
    	android:textColor="@color/white"
        android:text="Audio" />
    </LinearLayout>
    
 
  <LinearLayout
    android:id="@+id/linLayLocation"  
    android:layout_width="70dip"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
       <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="8dip"
     	android:scaleType="fitXY"
        android:src="@drawable/googlemapsicon300x300" />
       
       <TextView
        android:id="@+id/itemName3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="normal"
     
    	android:singleLine="true"
    	android:gravity="center_horizontal"   	
    	android:textSize="15sp"
    	android:textColor="@color/white"
        android:text="Location" />
    
    </LinearLayout>
     
  <LinearLayout
    android:id="@+id/linLayContact"    
    android:layout_width="70dip"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
       <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="8dip"
     	android:scaleType="fitXY"
        android:src="@drawable/directory" />
       
       <TextView
        android:id="@+id/itemName4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="normal"
       	android:singleLine="true"
    	android:gravity="center_horizontal"   	
    	android:textSize="15sp"
    	android:textColor="@color/white"
        android:text="Contact" />
    
    </LinearLayout>
</LinearLayout>
</LinearLayout>
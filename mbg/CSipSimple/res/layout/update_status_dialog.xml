<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#189AD1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Add new status"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10" >

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/db_et_statusValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:hint="Status"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:maxLength="200"
            android:maxLines="3"
            android:textColor="#000" 
            android:paddingLeft="3dp"
            android:background="@drawable/lower_border_edittext"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5" />

        <Button
            android:id="@+id/db_btn_updateStatus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_weight="2.5"
            android:background="@drawable/chatactionbarselector"
            android:text="Done"
            android:textColor="#fff"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#189AD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10" >

        <Button
            android:id="@+id/db_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#fff"
            android:text="Cancel"
            android:textColor="#000"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#189AD1" />

        <Button
            android:id="@+id/db_btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#fff"
            android:text="OK"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
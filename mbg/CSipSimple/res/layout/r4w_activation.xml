<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="90" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="4"
            android:background="@color/white"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="8" >

            <TextView
                android:id="@+id/txtVEnter"
                style="@style/TextViewNormal"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_weight="0"
                android:text="Enter" />

            <TextView
                android:id="@+id/txtVPin"
                style="@style/TextViewBold"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_weight="7"
                android:text=" PIN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="40" >

            <EditText
                android:id="@+id/edtPinNo1"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_weight="10"
                android:background="@drawable/numberstyle"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/txtgray"
                
                 >
            </EditText>

            <TextView
                android:id="@+id/txtVH1"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:text="-" />

            <EditText
                android:id="@+id/edtPinNo2"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_weight="10"
                android:background="@drawable/numberstyle"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/txtgray" >
            </EditText>

            <TextView
                android:id="@+id/txtVH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:text="-" />

            <EditText
                android:id="@+id/edtPinNo3"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_weight="10"
                android:background="@drawable/numberstyle"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/txtgray" >
            </EditText>

            <TextView
                android:id="@+id/txtVH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="-" />

            <EditText
                android:id="@+id/edtPinNo4"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_weight="10"
                android:background="@drawable/numberstyle"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/txtgray" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="8"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/hrline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dip"
                android:background="@drawable/hzline" />
        </LinearLayout>

        <LinearLayout
           
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="6"
            android:visibility="visible"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="8" >

            <TextView
                android:id="@+id/txtVChooseYour"
                style="@style/TextViewNormal"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_weight="0"
                android:text="Home Network " />

            <TextView
                android:id="@+id/txtVCountry"
                style="@style/TextViewBold"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_weight="8"
                android:text="COUNTRY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="10"
           	android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="8" >

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="@color/grayLight"
                android:gravity="center_horizontal|center_vertical" >

                <ImageView
                    android:id="@+id/imgCountryiCon"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_gravity="center_horizontal|center_vertical"/>
             </LinearLayout>

            
              <TextView
                android:id="@+id/txtCountryName"
                android:layout_width="0dip"
                android:background="@drawable/numberstyle"
                android:layout_height="match_parent"
                android:layout_weight="8"
          		android:text="Country Name"
          		style="@style/TextViewNormal"
               	android:gravity="center" />
              
              
             <TextView
                android:id="@+id/txtService"
                android:layout_width="0dip"
                android:background="@drawable/numberstyle"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:visibility="gone"
                android:textColor="#000"
                android:gravity="center_vertical|center_horizontal"
            	android:text=" This Service is not available in your Country " />
              
              
            <Spinner
                android:id="@+id/spnCountry"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:visibility="gone"
                android:background="@color/grayLight" />
           
        </LinearLayout>

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dip"
                android:background="@drawable/hzline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="6"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="8" >

            <TextView
                android:id="@+id/txtVEnteryour"
                style="@style/TextViewNormal"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_weight="0"
                android:text="Origin " />

            <TextView
                android:id="@+id/txtVMobileNo"
                style="@style/TextViewBold"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_weight="8"
                android:text="MOBILE NUMBER" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="8" >

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="@color/grayLight"
                android:gravity="center_horizontal|center_vertical" >

                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:background="@drawable/phoneicon" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtPhoneNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/numberstyle"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/txtgray" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dip"
            android:layout_weight="10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="8" >

            <Button
                android:id="@+id/btnActivate"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@color/BlueLight"
                android:text="REGISTER PIN"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
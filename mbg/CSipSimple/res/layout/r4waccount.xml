<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:background="@color/grayLight"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
      android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
   		android:layout_marginRight="10dp"
   		android:layout_marginTop="15dp"
    	android:layout_marginBottom="15dp"
     
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtVAccountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dip"
                android:textColor="@color/BlueLight"
                android:text="Account Details"
                 style="@style/TextViewBold"
                 android:textSize="30sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textVYourPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
              android:layout_marginTop="10dip"
            style="@style/TextViewBold"
            android:text="Your PIN" />

        <TextView
            android:id="@+id/tvAcDetPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextViewNormal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtYourCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Home Network Country" />

        <TextView
            android:id="@+id/tvAcDetSourceCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextViewNormal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtyourPhoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Home Network Phone Number" />

        <TextView
            android:id="@+id/tvAcDetSourcePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextViewNormal"
            android:layout_marginBottom="20dip"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtVCurrentyMCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Destination Country " />
        
         <TextView
            android:id="@+id/txtVCurrentyMapCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal"
            android:text="No Country"
             android:textAppearance="?android:attr/textAppearanceLarge" />

       

        
        <TextView
            android:id="@+id/txtVPhoneNumberMCurrently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Destination Phone Number" />
        
        <TextView
            android:id="@+id/txtVPhoneNumberMappedCurrently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="20dip"
            android:text="No Destination Country" />

     
        <TextView
            android:id="@+id/txtvActivateOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Activated On" />

        <TextView
            android:id="@+id/tvAcDetActOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal"
        
             android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtValidityLefft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Validity Left" />

        <TextView
            android:id="@+id/tvAcDetValLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtVExpiringOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Expiring On" />

        <TextView
            android:id="@+id/tvAcDetExpOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextViewNormal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtCurrentBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:text="Current Balance" />

        <TextView
            android:id="@+id/tvAcDetCurrentBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextViewNormal"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</ScrollView>
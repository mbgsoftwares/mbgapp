<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/flight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/flight_name_and_id"
                    style="@style/TextVBebasFontRedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/status"
                        style="@style/TextViewsmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="--"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/BlueLight" />

                    <TextView
                        android:id="@+id/status_details"
                        style="@style/TextViewsmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/darkgrey" />
                </LinearLayout>

            
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/dep_airport_code"
                    style="@style/TextVBebasFontRedBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/arrival_airport_code"
                    style="@style/TextVBebasFontRedBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/dep_city_name"
                    style="@style/TextViewsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/darkgrey" />

                <TextView
                    android:id="@+id/arrival_city_name"
                    style="@style/TextViewsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/darkgrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/dep_date"
                    style="@style/TextViewsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/darkgrey" />

                <TextView
                    android:id="@+id/arrival_date"
                    style="@style/TextViewsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/darkgrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="49"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/textView8"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TIMES"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView9"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TERMINAL"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/dep_time"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dep_terminal"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dip"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgActivate"
                        android:layout_width="2dip"
                        android:layout_height="50dip"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/verticalline" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/textView10"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TIMES"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView11"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TERMINAL"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/arrival_time"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/arrival_terminal"
                            style="@style/TextVBebasFontGrayBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
<LinearLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            
            android:weightSum="10" >

            <Button
                android:id="@+id/refresh_flight_details"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:background="@color/redLight"
              	android:text="Refresh Flight Info"
        		
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
        
<LinearLayout
            android:id="@+id/editflightinfo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            
            android:weightSum="10" >

            <Button
                android:id="@+id/edit_flight_details"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:background="@color/redLight"
              	android:text="Edit Flight Info"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/get_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
          
            android:weightSum="10" >
            
            <Button
                android:id="@+id/get_info_prompt"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:background="@color/redLight"
             	android:text="Get Flight Info "
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
        
        
        
        <LinearLayout
            android:id="@+id/get_info_layout"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grayLight"
            android:visibility="gone"
            android:orientation="horizontal"
            >
        </LinearLayout>
        
        <TextView
            android:id="@+id/tvhomeNetworkWrng"
            style="@style/TextVBebasFontGrayBold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:text="Please Ensure You Have Your Home Network Sim in Your Phone Before Pressing Activate" 
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/layoutBtnActivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dip"
                android:background="@color/blueDark"
                android:gravity="center_horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/imgActivate"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/paperplane" />
            </LinearLayout>

            <Button
                android:id="@+id/btnActivateFwd"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:background="@color/BlueLight"
                android:text="@string/activatebutt"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>
</ScrollView>
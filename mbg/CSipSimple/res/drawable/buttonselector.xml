<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         
         <gradient android:angle="-90" android:startColor="@color/gray" android:endColor="@color/btngray"  />            
     </shape>
 </item>
<item android:state_focused="true" >
     <shape android:shape="rectangle"  >
       
    
         <solid android:color="@color/btnblue"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
     
         <gradient android:angle="-90" android:startColor="@color/btnblue" android:endColor="@color/btngray" />            
     </shape>
 </item>

</selector>
